<web-app>
	<filter>
		<filter-name>EncodingFilter</filter-name>
		<filter-class>fw.EncodingFilter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<jsp-config>
		<jsp-property-group>
			<url-pattern>*.jsp</url-pattern>
			<page-encoding>Windows-31J</page-encoding>
			<include-prelude>/common/hiader.jsp</include-prelude>
			<include-code>/common/foter.jsp</include-code>
		</jsp-property-group>
	</jsp-config>
	
	
</web-app>